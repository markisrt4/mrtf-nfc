<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@color/black">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MRTF NFC Utility"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Wi-Fi Tag"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnBluetooth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Bluetooth Tag"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnDND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Do-Not-Disturb Tag"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnCarLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Car Location Tag"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnSOSText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOS Text Tag"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnBedtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bedtime / Night Tag"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnOpenApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Open Any App Tag" />

</LinearLayout>
